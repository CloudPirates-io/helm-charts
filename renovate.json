{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "helm-values"
  ],
  "helm-values": {
    "managerFilePatterns": [
      "/^charts/.*values\\.yaml$/"
    ],
    "versioning": "regex:^.+@.+$",
    "extractVersion": "(?<version>[^@]+)@(?<sha>sha256:[a-f0-9]{64})",
    "rangeStrategy": "replace"
  },
  "packageRules": [
    {
      "matchManagers": [
        "helm-values"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "matchPackageNames": [
        "/.*/"
      ]
    },
    {
      "matchManagers": [
        "helm-values"
      ],
      "enabled": false,
      "matchPackageNames": [
        "/harbor.cloudpirates.io/koperator-internal/services/clusterpirate/"
      ]
    }
  ]
}
