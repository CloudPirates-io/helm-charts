{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "custom.regex",
    "helmv3"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^charts/.+/values\\.yaml$/"
      ],
      "matchStrings": [
        "repository:\\s*(?<depName>[^\\s]+)\\s*\\n\\s*tag:\\s*['\"]?(?<currentValue>[^@'\"\\s]+)(?:@(?<currentDigest>sha256:[a-f0-9]{64}))?['\"]?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "matchDatasources": [
        "docker"
      ],
      "labels": [
        "dependencies",
        "renovate"
      ],
      "commitMessageTopic": "{{{depName}}}",
      "commitMessagePrefix": "[{{{replace 'docker.io/' '' depName}}}]",
      "automerge": false
    },
    {
      "matchManagers": [
        "helmv3"
      ],
      "labels": [
        "dependencies",
        "renovate"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "**/clusterpirate"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "enabled": false,
      "matchPackageNames": [
        "/^cloudpirates/common$/",
        "/^cloudpirates/valkey$/"
      ]
    }
  ]
}
