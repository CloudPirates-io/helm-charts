{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests"
  ],
  "enabledManagers": [
    "custom.regex",
    "helmv3"
  ],
  "separateMinorPatch": true,
  "prConcurrentLimit": 5,
  "recreateWhen": "always",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)charts/.+/values\\.ya?ml$/"
      ],
      "matchStrings": [
        "(?<depName>image):\\s*\\n(?:[^\\n]*\\n){0,3}?\\s*repository:\\s*(?<packageName>[^\\s]+)\\s*\\n\\s*tag:\\s*['\"]?(?<currentValue>[^@'\"\\s]+)(?:@(?<currentDigest>sha256:[a-f0-9]{64}))?['\"]?",
        "(?<depName>sentinel\\.image):\\s*\\n(?:[^\\n]*\\n){0,3}?\\s*repository:\\s*(?<packageName>[^\\s]+)\\s*\\n\\s*tag:\\s*['\"]?(?<currentValue>[^@'\"\\s]+)(?:@(?<currentDigest>sha256:[a-f0-9]{64}))?['\"]?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchDatasources": [
        "docker"
      ],
      "labels": [
        "dependencies",
        "renovate"
      ],
      "commitMessageTopic": "{{{depName}}}",
      "commitMessagePrefix": "[{{{replace 'docker.io/' '' packageName}}}]",
      "automerge": false,
      "separateMinorPatch": true,
      "groupName": "{{packageFile}} {{packageName}}"
    },
    {
      "matchManagers": [
        "helmv3"
      ],
      "labels": [
        "dependencies",
        "renovate"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "**/clusterpirate"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "enabled": false,
      "matchPackageNames": [
        "/^cloudpirates/common$/",
        "/^cloudpirates/valkey$/"
      ]
    }
  ]
}
